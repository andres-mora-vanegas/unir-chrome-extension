{
  "manifest_version": 2,

  "name": "UCentral extension",
  "version": "0.1.8",
  "description": "Permite agregar nuevas funcionalidades a Blackboard LMS y OpenLMS",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "css": ["styles.css"],
      "js": ["content.js"],
      "matches": [
        "https://ucentral.blackboard.com/*",
        "https://ucentral-test.blackboard.com/*",
        "http://ucentral.mrooms.net/*"
      ]
    }
  ]
}
